<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/intro4"
    android:background="#42A154">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="650sp"
            android:orientation="vertical"
            android:background="@drawable/bottom_rounded_shape">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="김그린에서는?"
                android:textStyle="bold"
                android:textSize="40sp"
                android:gravity="center"
                android:paddingTop="50sp"
                android:textColor="#3A8E66"
                android:fontFamily="@font/lineseed_kor_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="다른 사람들과 제로웨이스트 활동을 공유해요"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/lineseed_kor_rg"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이미지"
                    android:padding="80dp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unchecked_btn"
                android:layout_gravity="center"
                android:padding="3dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unchecked_btn"
                android:layout_gravity="center"
                android:padding="3dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unchecked_btn"
                android:layout_gravity="center"
                android:padding="3dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checked_btn"
                android:layout_gravity="center"
                android:padding="3dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unchecked_btn"
                android:layout_gravity="center"
                android:padding="3dp"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>