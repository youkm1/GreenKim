<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 뒤로가기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_btn"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:contentDescription="TODO" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#C0C0C0" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 프로필 뱃지 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/profile_badge_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="프로필 뱃지"
                    android:fontFamily="@font/lineseed_kor_bold"
                    android:textSize="25sp"
                    android:paddingBottom="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_badge_text"
                    android:text="뱃지를 클릭하여 프로필을 꾸며보세요!"
                    android:fontFamily="@font/lineseed_kor_rg"
                    android:textSize="15sp" />

                <!-- 프로필 뱃지 삽입 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/profile_badge_recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </LinearLayout>

            <!-- 획득한 뱃지 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="획득한 뱃지"
                        android:fontFamily="@font/lineseed_kor_bold"
                        android:textSize="25sp"
                        android:paddingBottom="3dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_badge_text"
                        android:text="획득한 뱃지로 대표 뱃지를 바꿔보세요!"
                        android:fontFamily="@font/lineseed_kor_rg"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 획득한 뱃지 삽입 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/earned_badge_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </LinearLayout>

            <!-- 미획득 뱃지 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="미획득 뱃지"
                        android:fontFamily="@font/lineseed_kor_bold"
                        android:textSize="25sp"
                        android:paddingBottom="3dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_badge_text"
                        android:text="목표를 달성하면 뱃지를 획득할 수 있어요."
                        android:fontFamily="@font/lineseed_kor_rg"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 미획득 뱃지 삽입 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/unearned_badge_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
