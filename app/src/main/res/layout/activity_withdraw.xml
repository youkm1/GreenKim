<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewPWActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#379120"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="탈퇴하기" />

    <Button
        android:id="@+id/button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="탈퇴 전 꼭 확인하세요!"
        android:textSize="23dp"
        android:textStyle="bold" />







    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:text="- 탈퇴한 휴대폰 번호로는 7일 간 재가입이 불가능합니다. "
        android:textSize="14dp" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:text="- 개인정보, 서비스 이용 기록 등은 복원이 불가능하며, 일정 기간 후 영구 삭제됩니다. "
        android:textSize="14dp" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:text="- 작성한 게시물은 삭제되지 않으며, (알수없음)으로 닉네임이 표시됩니다. "
        android:textSize="14dp" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:text="- 자세한 내용은 개인정보처리방침을 확인해주세요. "
        android:textSize="14dp" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:text="계정 비밀번호"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/button12"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F4FAF3"
        android:text="새 비밀번호"
        app:strokeColor="#256A4A"
        app:strokeWidth="1.5dp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"
        android:text="탈퇴하기"
        android:textSize="18dp"
        app:rippleColor="#379120"
        app:strokeColor="#379120"
        android:backgroundTint="#379120"
        />


</LinearLayout>